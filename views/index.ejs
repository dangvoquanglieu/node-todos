<html ng-app="app.todos">

<head>
    <title>Node/Angular Todos</title>

    <!-- load cdn styles -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
        integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />


    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.10.2/css/xeditable.min.css" />

    <!-- load cdn scripts -->
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.10.2/js/xeditable.min.js"></script>

    <!-- load app styles -->
    <link href="assets/css/style.css" rel="stylesheet">

    <!-- load app -->
    <script src="assets/js/main/app.js"></script>
    <script src="assets/js/main/services/svTodos.js"></script>
</head>

<body ng-controller="todoController">
    <div class="container">
        <div class="jumbotron text-center">
            <h1>{{appName}} <span class="label label-info">{{todos.length}}</span></h1>
        </div>
        <div id="todo-list" class="row">
            <div class="col-sm-6 col-offset-3 container">
                <div class="checkbox" ng-repeat="todo in todos">

                    <input type="checkbox" ng-model="todo.isDone" ng-change="updateTodo(todo)">
                    <a href="" ng-click="deleteTodo(todo)"><i class="fas fa-trash-alt"></i></a>
                    <a href="" ng-click="textBtnForm.$show()" ng-hide="textBtnForm.$visible"><i class="fas fa-edit"></i></a>
                    <span ng-class="{strike: todo.isDone}" editable-text="todo.text" e-form="textBtnForm"
                        onbeforesave="updateTodo(todo)">{{todo.text}}</span>
                </div>
                <p class="text-center" ng-show="loading">
                    <span class="fa fa-spinner fa-spin fa-3x"></span>
                </p>
            </div>
        </div>
        <div id="todo-form" class="row">
            <div class="col-sm-8 col-sm-offset-2 text center container">
                <form>
                    <div class="form-group">
                        <input type="text" ng-model="formData.text" class="form-control input-lg text-center"
                            placeholder="What do you want todo ?">
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg container" ng-disabled="!formData.text"
                        ng-click="createTodo()">Add</button>
                </form>

            </div>
        </div>
    </div>
</body>

</html>